<div class="update">
  <h3 class="task-update-title">Update Task</h3>
  <div class="task-detail">
    <% if(locals.task != null) { %>
    <form method="POST" action="/?_method=PUT">
        <input type="hidden" value="<%= task[0]._id %>" name="id">
        <h5>Task ID :  <%= task[0]._id %></h5>
        <h5>Task title :  <%= task[0].title %></h5>
        <h5>Task :   <input style="width: 240px;padding:0.3rem 0.5rem; outline:none;" type="text" value="<%= task[0].title %>" name="title"></h5>
        <div class="form-control">
         <% if(task[0].complete == true) { %>
           <input  id="check" name="complete" type="checkbox" checked value="<%= task[0].complete %>">
         <%  } else { %>
           <input  id="check" name="complete" type="checkbox"  value="<%= task[0].complete %>">
         <% } %>
          <span>Complete</span>
        </div>
        <button type="submit" id="btn-update">Update</button>
    </form>

    <% } %>
  </div>
</div>
